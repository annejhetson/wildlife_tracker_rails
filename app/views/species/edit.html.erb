<h1>Edit <%= @animal.name %></h1>

<% if @animal.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @animal.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/species/<%= @animal.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="species_name">Name: </label>
  <input id="species_name" name="name" type="text" value="<%= @animal.name %>">
  <button>Update</button>
</form>
